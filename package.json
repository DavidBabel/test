{
  "name": "project-score",
  "version": "1.0.0",
  "description": "Allow to mesure your node project score",
  "main": "src/main/index.ts",
  "author": "David Babel",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/index.js",
    "dev": "ts-node-dev -C ttypescript src/main/index.ts",
    "watch": "ts-node-dev --respawn -C ttypescript src/main/index.ts",
    "build": "ttsc",
    "build:watch": "ttsc -w",
    "test": "jest",
    "coverage": "jest --coverage",
    "dependencies": "npm-check-updates",
    "circular-dependencies": "madge --circular ./src",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/commander": "^2.12.2",
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.6",
    "@types/ora": "^3.0.0",
    "@types/package-json": "^5.0.0",
    "jest": "^24.1.0",
    "madge": "^3.4.4",
    "npm-check-updates": "^2.15.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "ts-transformer-imports": "^0.4.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.6",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "colors": "^1.3.3",
    "commander": "^2.19.0",
    "dotenv": "^6.2.0",
    "ora": "^3.1.0",
    "src": "*"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "project-score": {
    "noMock": true,
    "type": "cli/api/front"
  }
}
